<script>
function typeText(el, text, speed=40){
  el.innerHTML = "";
  let i = 0;
  function t(){
    if(i < text.length){
      el.innerHTML += text[i++];
      setTimeout(t, speed);
    }
  }
  t();
}

function chooseYes() {
  const name = "Jayuu";

  hideQ();
  const box = document.getElementById("yesBox");
  box.classList.add("show","glow");

  typeText(
    document.getElementById("yesMsg"),
    name + ", you deserve all my roses ðŸ¥°ðŸŒ¹"
  );

  let roses = "";
  for (let i=0;i<120;i++) roses += "ðŸŒ¹";
  document.getElementById("roseWall").innerText = roses;

  for (let i=0;i<70;i++) createPetal();
}

function chooseNo() {
  const name = "Jayuu";

  hideQ();
  document.body.classList.add("angry");

  const box = document.getElementById("noBox");
  box.classList.add("show","shake");

  typeText(
    document.getElementById("noMsg"),
    name + "... my heart made a tiny dramatic crack sound ðŸ’”"
  );
}

function hideQ(){
  document.getElementById("question").style.display="none";
}

function createPetal(){
  const p = document.createElement("div");
  p.className="petal";
  p.innerText="ðŸŒ¹";
  p.style.left=Math.random()*100+"vw";
  p.style.animationDuration=(3+Math.random()*4)+"s";
  p.style.opacity=Math.random();
  document.body.appendChild(p);
}

/* starting petals */
for(let i=0;i<25;i++) createPetal();
</script>

